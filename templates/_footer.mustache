		    <script>
                $(document).ready(function(){
                    $('#first_page').live("click",function(){
                        $('.pages_wrapper').animate({"left":-($('.page_one').position().left)}, 400);
                        $('#one_dark').toggle();
                        $('#one_light').toggle();
                        $('#two_dark').toggle();
                        $('#two_light').toggle();
                    });
                    $('#second_page').live("click", function(){
                        $('.pages_wrapper').animate({"left":-($('.page_two').
                            position().left)}, 400);
                        $('#one_dark').toggle();
                        $('#one_light').toggle();
                        $('#two_dark').toggle();
                        $('#two_light').toggle();
                    });
                    $('#contact').click(contact);
                });
                
                function contact() {
                    $('.contact').toggle();
                    if(!$('.contact').is(':visible')) {
